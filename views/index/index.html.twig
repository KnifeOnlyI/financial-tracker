<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Financial tracker</title>
</head>
<body>
<header>
    <h1>Financial tracker</h1>
</header>

<section>
    <h2>Tracked stocks</h2>

    <table style="table-layout: fixed;width: 100%;border-collapse: collapse;border: 1px solid black;text-align:center;">
        <thead style="border-bottom: 1px solid black; background: yellow;">
        <tr>
            <th>ISIN</th>
            <th>Stock</th>
            <th style="text-align: center; border-left: 1px black solid;">Price</th>
        </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.isin|upper }}</td>
                <td>{{ stock.label|upper }}</td>
                <td style="text-align: right; border-left: 1px solid black;">{{ stock.price|price }} â‚¬</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</section>
</body>
</html>
